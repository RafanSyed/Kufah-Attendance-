generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Student {
  id        String       @id @default(cuid())
  firstName String
  lastName  String
  email     String       @unique
  phone     String
  attendance Attendance[]
}

model Teacher {
  id       String   @id @default(cuid())
  firstName String
  lastName  String
  email    String   @unique
  phone    String
  classes  Class[]
}

model Class {
  id       String      @id @default(cuid())
  name     String
  teacher  Teacher    @relation(fields: [teacherId], references: [id])
  teacherId String
  attendance Attendance[]
}

model Attendance {
  id        String   @id @default(cuid())
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  class     Class    @relation(fields: [classId], references: [id])
  classId   String
  date      DateTime
  online    Boolean
  inPerson  Boolean
  recording Boolean
  absent    Boolean
}
